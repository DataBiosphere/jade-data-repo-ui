{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "ES6",
      "DOM",
      "ES2021.String"
    ],
    "module": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "actions/*": ["./src/actions/*"],
      "components/*": ["./src/components/*"],
      "constants/*": ["./src/constants/*"],
      "containers/*": ["./src/containers/*"],
      "generated/*": ["./src/generated/*"],
      "libs/*": ["./src/libs/*"],
      "models/*": ["./src/models/*"],
      "modules/*": ["./src/modules/*"],
      "media/*": ["./src/media/*"],
      "reducers/*": ["./src/reducers/*"],
      "routes/*": ["./src/routes/*"],
      "sagas/*": ["./src/sagas/*"],
      "actions": ["./src/actions"],
      "components": ["./src/components"],
      "constants": ["./src/constants"],
      "generated": ["./src/generated"],
      "libs": ["./src/libs"],
      "models": ["./src/models"],
      "modules": ["./src/modules"],
      "media": ["./src/media"],
      "reducers": ["./src/reducers"],
      "sagas": ["./src/sagas"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["node", "vite/client"],
  },
  "include": [
    "src",
    "src/types/custom.d.ts"
  ]
}
